{
  "name": "quicknotes",
  "productName": "QuickNotes",
  "version": "1.0.0",
  "description": "A note taker",
  "main": "main.js",
  "author": "Krzysztof Kowalczyk",
  "license": "ISC",
  "build": {
    "appId": "io.quicknotes",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerHeaderIcon": "icon.ico"
    },
    "mac": {
      "category": "productivity",
      "icon": "icon.icns"
    },
    "dmg": {
      "icon": "icon.icns",
      "background": "dmg-background.png"
    }
  },
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "build": "./node_modules/.bin/build"
  },
  "devDependencies": {
    "electron": "^1.4.5",
    "electron-builder": "^7.19.1"
  },
  "dependencies": {
    "electron-window-state": "^3.1.0"
  }
}
