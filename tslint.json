{
  "rules": {
    "linebreak-style": [
      true,
      "LF"
    ],
    "no-trailing-whitespace": true,
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "no-conditional-assignment": true,
    "quotemark": [
      true,
      "single",
      "jsx-single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "always"
    ]
  }
}
