{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noLib": false,
        "outDir": "tsbuild",
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
      "ts/**/*"
    ],
    "exclude": [
      ".vscode",
      "cmd",
      "data",
      "node_modules",
      "pkg",
      "s",
      "sass",
      "static",
      "tools",
      "tsbuild"
    ]
}
