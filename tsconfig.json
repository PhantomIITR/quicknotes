{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noLib": false,
        "outDir": "tsbuild",
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
      "ts/**/*",
      "typings/index.d.ts"
    ],
    "exclude": [
      "ansible",
      "cmd",
      "data",
      "node_modules",
      "s",
      "sass",
      "scripts",
      "tools",
      "tsbuild"
    ]
}
